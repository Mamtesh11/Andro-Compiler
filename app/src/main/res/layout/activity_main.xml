<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context="com.example.coed.androcompile.MainActivity">



    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:entries="@array/compiler_arrays"
        android:prompt="@string/langauge_promate" />
    <EditText
        android:id="@+id/editor"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:paddingLeft="10dp"
        android:inputType="textMultiLine"/>
    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:layout_below="@+id/editor"
        android:text="Enter Input:"
        />

    <EditText
        android:id="@+id/inputEdit"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/input"
        android:paddingLeft="10dp"
        android:background="#FFFFFF"
        android:inputType="textMultiLine"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPILE and RUN"
        android:layout_below="@+id/inputEdit"
        android:padding="10dp"
        android:id="@+id/compileNrun"/>


    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:layout_below="@+id/compileNrun"
        android:text="Output is here:"/>
    <TextView
        android:id="@+id/output_edit"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textAlignment="center"
        android:layout_below="@+id/output"
        android:textColor="#000000"
        android:background="#FFFFFF"
        />



</RelativeLayout>

